generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id                  Int      @id @default(autoincrement())
  name                String
  email               String   @unique
  remarks             String   @db.VarChar(250)
  stripeCustomerId    String
  enrollmentSecret    String?  @db.VarChar(1000)
  paymentSecret       String?  @db.VarChar(1000)
  enrollmentLinkHash  String? @unique @db.VarChar(1000)
  paymentLinkHash     String? @unique @db.VarChar(1000)
  enrollHashTimestamp DateTime?
  paymentHashTimestamp DateTime?
  createdAt           DateTime @default(now())
  paymentEnrolled     Boolean  @default(false)
}

